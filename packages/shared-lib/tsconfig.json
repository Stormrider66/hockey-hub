{
  "extends": "../../services/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    
    // Override for library build
    "module": "commonjs",
    "target": "ES2020",
    
    // TypeORM decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    
    // Library specific settings
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": false, // Allow flexibility for DTOs
    "noUncheckedIndexedAccess": false,
    
    // Path mapping for shared lib
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../types/*"]
    },
    
    // Type definitions
    "types": ["node"],
    "typeRoots": [
      "../../node_modules/@types",
      "../../types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "../../types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}