{
  "name": "@hockey-hub/file-service",
  "version": "1.0.0",
  "description": "File management service for Hockey Hub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "pnpm run typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "pnpm run typeorm -- migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "pnpm run typeorm -- migration:revert -d src/config/typeorm.config.ts",
    "test:coverage:watch": "jest --coverage --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.523.0",
    "@aws-sdk/s3-request-presigner": "^3.523.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "sharp": "^0.33.2",
    "typeorm": "^0.3.20",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "ioredis": "^5.3.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "mime-types": "^2.1.35",
    "file-type": "^19.0.0",
    "clamav.js": "^0.12.0",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "@hockey-hub/shared-lib": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/mime-types": "^2.1.4",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^2.0.16",
    "@types/cors": "^2.8.17",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0"
  }
}
