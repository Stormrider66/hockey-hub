    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "pg": "^8.11.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
