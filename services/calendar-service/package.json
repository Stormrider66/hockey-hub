{
  "name": "@hockey-hub/calendar-service",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "jest",
    "test:int": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "typeorm": "dotenv -e ./.env -- ts-node ./node_modules/typeorm/cli.js -d src/data-source.ts",
    "migration:generate": "dotenv -e ./.env -- ts-node ./node_modules/typeorm/cli.js -d src/data-source.ts migration:generate src/migrations/%npm_config_name%",
    "migration:run": "pnpm typeorm migration:run",
    "migration:revert": "pnpm typeorm migration:revert"
  },
  "dependencies": {
    "@hockey-hub/types": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "@hockey-hub/translations": "workspace:*",
    "express": "^4.17.1",
    "helmet": "^5.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.15.6",
    "typeorm": "^0.3.22",
    "sqlite3": "^5.1.6",
    "sql.js": "^1.8.0",
    "nats": "^2.15.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^5.3.0",
    "sql.js": "^1.8.0"
  }
}
