{
  "name": "@hockey-hub/user-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec ts-node src/index-mock.ts",
    "dev:quick": "nodemon start-dev.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "pnpm run typeorm migration:create",
    "migration:generate": "pnpm run typeorm migration:generate -- -d src/config/typeorm.config.ts",
    "migration:run": "pnpm run typeorm migration:run -- -d src/config/typeorm.config.ts",
    "migration:revert": "pnpm run typeorm migration:revert -- -d src/config/typeorm.config.ts",
    "migration:show": "pnpm run typeorm migration:show -- -d src/config/typeorm.config.ts",
    "db:prepare": "ts-node src/scripts/prepare-uuid-migration.ts",
    "db:migrate": "pnpm run db:prepare && pnpm run migration:run",
    "db:seed": "ts-node src/seeders/development.seeder.ts",
    "db:reset": "pnpm run migration:revert && pnpm run migration:run && pnpm run db:seed",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "reflect-metadata": "^0.1.13",
    "class-validator": "^0.14.0",
    "@hockey-hub/monitoring": "workspace:*",
    "@hockey-hub/shared-lib": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^6.16.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "@types/pg": "^8.10.9"
  }
}
