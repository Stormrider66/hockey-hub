{
  "all": true,
  "include": [
    "apps/**/src/**/*.{js,jsx,ts,tsx}",
    "services/**/src/**/*.{js,ts}",
    "packages/**/src/**/*.{js,ts}"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.d.ts",
    "**/*.interface.ts",
    "**/*.dto.ts",
    "**/*.types.ts",
    "**/index.ts",
    "**/index.tsx",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/test/**",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.spec.{js,jsx,ts,tsx}",
    "**/*.stories.{js,jsx,ts,tsx}"
  ],
  "reporter": ["html", "lcov", "text", "text-summary", "json-summary"],
  "report-dir": "./coverage",
  "temp-dir": "./.nyc_output",
  "check-coverage": true,
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}